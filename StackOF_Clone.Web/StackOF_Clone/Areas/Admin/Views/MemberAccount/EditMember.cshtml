@model StackOF_Clone.Web.Areas.Admin.Models.MemberUpdateModel

<div class=" container">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-light mt-2">
                <!-- /.card-header -->
                @using (Html.BeginForm("EditMember", "MemberAccount", FormMethod.Post, new { id = "formfield", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="card-body">
                        <div class="form-group row">
                            @Html.LabelFor(x => x.UserName, new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.HiddenFor(x => x.Id)
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(x => x.PhoneNumber, new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="float-left">
                                <button type="button" class="btn btn-success pull-left" id="submitBtn" data-toggle="modal" data-target="#confirm-submit">Submit</button>
                            </div>
                            <div class="float-right">
                                <a href="/admin/memberaccount/index" class="btn btn-outline-secondary pull-right">Back To List</a>
                            </div>
                        </div>
                    </div>
                }

                <!--/.col (left) -->
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="confirm-submit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Confirm Submit
            </div>
            <div class="modal-body">
                Are you sure you want to save the user?

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" id="submitConfirm" class="btn btn-success success">Submit</button>
            </div>
        </div>
    </div>
</div>

@section PageScripts
{
    <script>
        $('#submitConfirm').click(function () {
            $('#formfield').submit();
        });
    </script>
}