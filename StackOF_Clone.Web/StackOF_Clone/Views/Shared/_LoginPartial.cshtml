@using Microsoft.AspNet.Identity
<ul class="navbar-nav">
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
                <li class="nav-item">
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new {@class= "nav-link text-dark", title = "Manage" })
                </li>
                <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        }
    }
    else
    {
            <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link text-dark", id = "registerLink" })</li>
            <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link text-dark", id = "loginLink" })</li>
    }
</ul>